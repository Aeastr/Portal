#!/bin/bash

# Pre-commit hook to auto-fix SwiftLint issues before committing

# Don't use set -e as we want to handle errors ourselves
set -uo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo "üîç Running pre-commit SwiftLint..."

# Check if SwiftLint is installed
if ! command -v swiftlint &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  SwiftLint is not installed, skipping checks${NC}"
    echo "Install with: brew install swiftlint"
    exit 0
fi

# Get the list of Swift files that are staged for commit
SWIFT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "\.swift$" || true)

if [ -z "$SWIFT_FILES" ]; then
    echo "No Swift files to check"
    exit 0
fi

# Count files
FILE_COUNT=$(echo "$SWIFT_FILES" | wc -l | tr -d ' ')
echo -e "${BLUE}Found $FILE_COUNT Swift file(s) to process${NC}"

echo -e "${BLUE}üîß Auto-fixing SwiftLint issues...${NC}"

# Run SwiftLint auto-fix on staged Swift files
FIXED_FILES=""
PROCESSED=0
for FILE in $SWIFT_FILES; do
    if [ -f "$FILE" ]; then
        echo -n "  Processing $(basename $FILE)..."
        # Run auto-fix with timeout and capture output
        if command -v timeout >/dev/null 2>&1; then
            OUTPUT=$(timeout 5 swiftlint --fix --path "$FILE" --config .swiftlint.yml 2>&1)
            RESULT=$?
        elif command -v gtimeout >/dev/null 2>&1; then
            OUTPUT=$(gtimeout 5 swiftlint --fix --path "$FILE" --config .swiftlint.yml 2>&1)
            RESULT=$?
        else
            OUTPUT=$(swiftlint --fix --path "$FILE" --config .swiftlint.yml 2>&1)
            RESULT=$?
        fi

        if [ $RESULT -eq 124 ]; then
            echo -e " ${RED}timeout${NC}"
            echo "    SwiftLint took too long to process this file"
        elif [ $RESULT -eq 0 ]; then
            # Check if file was modified
            if ! git diff --quiet "$FILE"; then
                FIXED_FILES="$FIXED_FILES $FILE"
                echo -e " ${GREEN}fixed${NC}"
            else
                echo -e " ${GREEN}ok${NC}"
            fi
        else
            echo -e " ${RED}error${NC}"
            echo "    SwiftLint error: $OUTPUT"
        fi
        ((PROCESSED++)) || true
    else
        echo -e "  ${YELLOW}Warning: $FILE not found (may have been deleted)${NC}"
    fi
done

echo -e "${BLUE}Processed $PROCESSED file(s)${NC}"

# If files were fixed, re-stage them
if [ -n "$FIXED_FILES" ]; then
    echo -e "${YELLOW}üìù SwiftLint fixed issues in:${NC}"
    for FILE in $FIXED_FILES; do
        echo "   - $FILE"
        git add "$FILE"
    done
    echo -e "${GREEN}‚úÖ Fixed files have been re-staged${NC}"
fi

# Now run a final check to see if there are any remaining issues that couldn't be auto-fixed
echo -e "${BLUE}üîç Checking for remaining issues...${NC}"

REMAINING_ISSUES=0
for FILE in $SWIFT_FILES; do
    if [ -f "$FILE" ]; then
        # Check for issues that can't be auto-fixed
        OUTPUT=$(swiftlint lint --path "$FILE" --config .swiftlint.yml --quiet 2>&1)
        if [ -n "$OUTPUT" ]; then
            # Check if there are actual errors (not just warnings)
            if echo "$OUTPUT" | grep -q "error:"; then
                REMAINING_ISSUES=1
                echo -e "${RED}‚ùå Cannot auto-fix issues in: $FILE${NC}"
                echo "$OUTPUT" | grep "error:" | head -5
            fi
        fi
    fi
done

if [ $REMAINING_ISSUES -ne 0 ]; then
    echo ""
    echo -e "${RED}‚ùå Some SwiftLint issues cannot be auto-fixed${NC}"
    echo "Run 'swiftlint lint --config .swiftlint.yml' to see all issues"
    echo ""
    echo "To commit anyway, use: git commit --no-verify"
    exit 1
fi

echo -e "${GREEN}‚úÖ All SwiftLint checks passed!${NC}"
exit 0
