#!/bin/bash

# Pre-commit hook to run SwiftLint on changed Swift files

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Running pre-commit SwiftLint check..."

# Check if SwiftLint is installed
if ! command -v swiftlint &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  SwiftLint is not installed, skipping checks${NC}"
    echo "Install with: brew install swiftlint"
    exit 0
fi

# Get the list of Swift files that are staged for commit
SWIFT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "\.swift$")

if [ -z "$SWIFT_FILES" ]; then
    echo "No Swift files to check"
    exit 0
fi

# Run SwiftLint on staged Swift files
FAILED=0
for FILE in $SWIFT_FILES; do
    if [ -f "$FILE" ]; then
        swiftlint lint --path "$FILE" --config .swiftlint.yml --quiet
        if [ $? -ne 0 ]; then
            FAILED=1
        fi
    fi
done

if [ $FAILED -ne 0 ]; then
    echo -e "${RED}‚ùå SwiftLint found issues. Please fix them before committing.${NC}"
    echo "Run 'swiftlint lint --config .swiftlint.yml' to see all issues"
    exit 1
fi

echo -e "${GREEN}‚úÖ SwiftLint checks passed${NC}"
exit 0